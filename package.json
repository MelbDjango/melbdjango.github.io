{
  "name": "melbdjango.github.io",
  "version": "0.0.1",
  "description": "Static page for Melb Django, to be hosted on gh-pages",
  "main": "index.js",
  "directories": {
    "doc": "doc"
  },
  "scripts": {
    "forever": "node_modules/.bin/forever",
    "postcss": "node_modules/.bin/postcss",
    "watch": "node_modules/.bin/watch",

    "build": "node-sass --source-map true styles/styles.scss .tmp/styles-raw.css & npm run autoprefixer -s",
    "autoprefixer": "postcss --use autoprefixer -o .tmp/styles-prefixed.css .tmp/styles-raw.css -m .tmp/styles-raw.css.map & npm run cleancss -s",
    "cleancss": "cleancss --source-map -o dist/styles.min.css .tmp/styles-prefixed.css",

    "forever": "forever start -w --watchDirectory styles -c \"npm run build\" ./styles",
    "onchange": "onchange 'styles/**/*' -- npm run build",
    "watch": "watch \"npm run build\" styles",

    "serve": "browser-sync start --server --files \"*.html\" --files \"dist/*\"",

    "dev:forevever": "parallelshell \"npm run forever\" \"npm run serve\"",
    "dev:nodemon": "nodemon --watch styles --exec \"npm run build\"",
    "dev:watch": "parallelshell \"npm run watch\" \"npm run serve\" -s",
    "dev:onchange": "npm run onchange & npm run serve",

    "start": "npm run dev:onchange",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MelbDjango/melbdjango.github.io.git"
  },
  "keywords": [
    "django",
    "commoncode",
    "common-code"
  ],
  "author": "Darren Frenkel",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/MelbDjango/melbdjango.github.io/issues"
  },
  "homepage": "https://github.com/MelbDjango/melbdjango.github.io#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "browser-sync": "^2.11.1",
    "clean-css": "^3.4.9",
    "node-sass": "^3.4.2",
    "nodemon": "^1.3.1",
    "onchange": "^2.0.0",
    "parallelshell": "^2.0.0",
    "postcss-cli": "^2.5.1",
    "watch": "^0.17.1"
  }
}
